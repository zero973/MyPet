<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/languagebacgroundanother">

    <TextView
        android:text="Составь слово из букв"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="8pt"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Правильных ответов: 0 из 20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewCountRightAnswers"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textViewLevelAnagrams"
        android:layout_alignLeft="@+id/textViewLevelAnagrams"
        android:layout_alignStart="@+id/textViewLevelAnagrams" />

    <TextView
        android:text="Анаграмма"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWord"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:text="Проверить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/buttonCheckUserWord"
        android:padding="4pt"
        android:textStyle="italic"
        android:background="@drawable/beautiful_button"
        android:layout_below="@+id/editTextUserWord"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Уровень: 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/textViewLevelAnagrams"
        android:layout_below="@+id/buttonCheckUserWord"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/editTextUserWord"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textViewWord"
        android:layout_centerHorizontal="true" />
</RelativeLayout>