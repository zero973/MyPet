<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/room"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonHealth"
        android:background="@drawable/heart"
        android:contentDescription="@string/health"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonFood"
        android:background="@drawable/chicken"
        android:contentDescription="@string/fish"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonAchievement"
        android:background="@drawable/school"
        android:contentDescription="@string/achieve"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />


    <TextView
        android:text="Никто"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNamePet"
        android:textSize="24sp"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowColor="@color/black"
        android:textColor="@color/WhiteColor"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_below="@+id/imageButtonHealth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/imageButtonPet"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Сменить питомца"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:id="@+id/buttonChangePet"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowColor="@color/black"
        android:background="@drawable/beautiful_button"
        android:padding="4pt"
        android:textColor="@color/WhiteColor"
        android:textStyle="italic"/>
</RelativeLayout>