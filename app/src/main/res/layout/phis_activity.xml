<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bacgroundphis"/>

    <TextView
        android:text="Выбери задание"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/WhiteColor"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:shadowRadius="5"
        android:shadowDx="1"
        android:shadowColor="@color/black"/>

    <com.example.student3.myfavouritepet.ButtonStrokeText
        android:text="Вопросы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/buttonQuestionsPhis"
        android:textStyle="italic"
        android:background="@drawable/beautiful_button"
        android:padding="4pt"
        app:textStrokeColor="@color/WhiteColor"
        app:textStrokeWidth="3sp"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true" />

    <com.example.student3.myfavouritepet.ButtonStrokeText
        android:text="Задачи"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/buttonExamplesPhis"
        android:textStyle="italic"
        android:background="@drawable/beautiful_button"
        android:padding="4pt"
        app:textStrokeColor="@color/WhiteColor"
        app:textStrokeWidth="3sp"
        android:layout_below="@+id/buttonQuestionsPhis"
        android:layout_alignLeft="@+id/buttonQuestionsPhis"
        android:layout_alignStart="@+id/buttonQuestionsPhis"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />
</RelativeLayout>