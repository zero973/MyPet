<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathbacgroundanother">

    <TextView
        android:text="+ -"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextZnak1"
        android:layout_alignBaseline="@+id/TextFieldChislo1"
        android:layout_alignBottom="@+id/TextFieldChislo1"
        android:layout_toRightOf="@+id/TextFieldChislo1"
        android:layout_toEndOf="@+id/TextFieldChislo1"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <TextView
        android:text="000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextFieldChislo2"
        android:layout_alignBaseline="@+id/TextZnak1"
        android:layout_alignBottom="@+id/TextZnak1"
        android:layout_toRightOf="@+id/TextZnak1"
        android:layout_toEndOf="@+id/TextZnak1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:text="="
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/TextFieldChislo2"
        android:layout_alignBottom="@+id/TextFieldChislo2"
        android:layout_toRightOf="@+id/TextFieldChislo2"
        android:layout_toEndOf="@+id/TextFieldChislo2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:text="0"
        android:id="@+id/Answer1"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_toRightOf="@+id/textView15"
        android:layout_toEndOf="@+id/textView15"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />


    <TextView
        android:text="Правильных ответов: 0 из 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRightAnswers"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/buttonCheckAnswers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Реши пример"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView6"
        android:textSize="12pt"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <TextView
        android:text="000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/TextFieldChislo1"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Проверить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/beautiful_button"
        android:padding="4pt"
        android:id="@+id/buttonCheckAnswers"
        android:textStyle="italic"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/Answer1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>